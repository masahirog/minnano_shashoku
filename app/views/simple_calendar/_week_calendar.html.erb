<div class="simple-calendar">
  <div class="calendar-heading">
    <span class="calendar-title">
      第<%= calendar.week_number %>週
      <% if calendar.number_of_weeks > 1 %>
        - 第<%= calendar.end_week %>週
      <% end %>
    </span>
    <nav class="calendar-nav">
      <%= link_to '◀ 前週', calendar.url_for_previous_view, class: 'calendar-nav-link' %>
      <%= link_to '今日', calendar.url_for_today_view, class: 'calendar-nav-link' %>
      <%= link_to '翌週 ▶', calendar.url_for_next_view, class: 'calendar-nav-link' %>
    </nav>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
