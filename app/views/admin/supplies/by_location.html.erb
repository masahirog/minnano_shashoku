<% content_for(:title) do %>
  <% if @supply %>
    <%= @supply.name %> の拠点別在庫
  <% else %>
    拠点別在庫一覧
  <% end %>
<% end %>

<% if @supply %>
  <% breadcrumb :admin_supplies_by_location_with_supply, @supply %>
<% else %>
  <% breadcrumb :admin_supplies_by_location %>
<% end %>

<!-- Content Header -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">
          <% if @supply %>
            <%= @supply.name %> の拠点別在庫
          <% else %>
            拠点別在庫一覧
          <% end %>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <%= breadcrumbs separator: " / ", autoroot: false %>
        </ol>
      </div>
    </div>
  </div>
</div>

<!-- Main content -->
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <% if @supply %>
        <div class="callout callout-info">
          <h5><%= @supply.name %> (<%= @supply.sku %>)</h5>
          <p class="mb-0">
            <span class="badge badge-info"><%= @supply.category %></span>
            単位: <%= @supply.unit %> |
            合計在庫: <strong><%= @stocks.sum(:quantity) %> <%= @supply.unit %></strong>
          </p>
        </div>
      <% end %>

      <div class="card">
        <div class="card-header">
          <h3 class="card-title">拠点別在庫一覧</h3>
          <div class="card-tools">
            <%= link_to "備品移動登録", new_admin_bulk_supply_movement_path, class: "btn btn-primary btn-sm mr-1" %>
            <%= link_to "戻る", admin_supplies_path, class: "btn btn-secondary btn-sm" %>
          </div>
        </div>

        <div class="card-body p-0">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <% unless @supply %>
                  <th>備品名</th>
                <% end %>
                <th>拠点区分</th>
                <th>拠点名</th>
                <th class="text-right">在庫数</th>
                <th class="text-right">実地棚卸数</th>
                <th>最終更新</th>
                <th class="text-center">操作</th>
              </tr>
            </thead>
            <tbody>
              <% if @stocks.any? %>
                <% @stocks.each do |stock| %>
                  <tr>
                    <% unless @supply %>
                      <td><%= stock.supply.name %></td>
                    <% end %>
                    <td><%= stock.location_type_japanese %></td>
                    <td><%= stock.location_display_name %></td>
                    <td class="text-right"><strong><%= stock.quantity %></strong> <%= stock.supply.unit %></td>
                    <td class="text-right"><%= stock.physical_count ? "#{stock.physical_count} #{stock.supply.unit}" : '-' %></td>
                    <td><%= stock.last_updated_at ? l(stock.last_updated_at, format: :long) : '-' %></td>
                    <td class="text-center">
                      <%= link_to "詳細", admin_supply_stock_path(stock), class: "btn btn-sm btn-outline-info" %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="<%= @supply ? 6 : 7 %>" class="text-center text-muted p-4">
                    在庫データがありません
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
