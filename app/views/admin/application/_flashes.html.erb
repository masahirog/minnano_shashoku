<% if flash.any? %>
  <div class="container-fluid" style="padding: 0 30px; margin-top: 20px;">
    <% flash.each do |key, value| %>
      <% alert_type = case key.to_sym
        when :notice then 'success'
        when :alert then 'warning'
        when :error then 'danger'
        else 'info'
      end %>

      <div class="alert alert-<%= alert_type %> alert-dismissible fade show" role="alert" style="border-left: 4px solid;">
        <%= value %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  </div>
<% end %>
