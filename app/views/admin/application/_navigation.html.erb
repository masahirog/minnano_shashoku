<%#
# Navigation - AdminLTE Sidebar with Dropdown Menu

カスタムナビゲーション - ドロップダウンメニュー形式
%>

<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <div class="brand-link">
    <a href="<%= admin_own_locations_path %>" class="brand-logo-link">
      <span class="brand-text font-weight-light">みんなの社食</span>
    </a>
    <a href="#" class="pushmenu-btn" role="button">
      <i class="fas fa-bars"></i>
    </a>
  </div>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- User Panel -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <i class="far fa-user-circle user-icon"></i>
      </div>
      <div class="info">
        <%= link_to edit_admin_user_registration_path, class: "d-block user-link" do %>
          <%= current_admin_user&.email if current_admin_user %>
        <% end %>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

        <!-- 自社管理 -->
        <li class="nav-item has-treeview">
          <a href="#" class="nav-link">
            <i class="nav-icon fas fa-building"></i>
            <p>
              自社管理
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <%= link_to admin_own_locations_path, class: "nav-link #{nav_link_state(:own_locations) == 'active' ? 'active' : ''}" do %>
                <p>自社拠点</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_staffs_path, class: "nav-link #{nav_link_state(:staffs) == 'active' ? 'active' : ''}" do %>
                <p>スタッフ</p>
              <% end %>
            </li>
          </ul>
        </li>

