<% content_for(:title) { t("administrate.actions.show_resource", name: page.page_title) } %>

<% breadcrumb :admin_supply_stock, page.resource %>

<!-- Content Header -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">在庫詳細</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <%= breadcrumbs separator: " / ", autoroot: false %>
        </ol>
      </div>
    </div>
  </div>
</div>

<%= content_for(:header_middle) %>

<!-- Main content -->
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">在庫情報</h3>
          <div class="card-tools">
            <%= link_to "備品移動登録", new_admin_bulk_supply_movement_path, class: "btn btn-primary btn-sm mr-1" %>
            <%= link_to "戻る", admin_supply_stocks_path, class: "btn btn-secondary btn-sm" %>
          </div>
        </div>

        <%= content_for(:header_last) %>

        <div class="card-body">
          <% page.attributes.each do |title, attributes| %>
            <% if title.present? %>
              <h5 class="mt-3 mb-3"><%= t "helpers.label.#{page.resource_name}.#{title}", default: title %></h5>
            <% end %>

            <dl class="row">
              <% attributes.each do |attribute| %>
                <dt class="col-sm-3" id="<%= attribute.name %>">
                  <%= t(
                    "helpers.label.#{resource_name}.#{attribute.name}",
                    default: page.resource.class.human_attribute_name(attribute.name),
                  ) %>
                </dt>
                <dd class="col-sm-9">
                  <%= render_field attribute, page: page %>
                </dd>
              <% end %>
            </dl>
            <% unless title == page.attributes.keys.last %>
              <hr>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- 備品移動履歴 -->
      <div class="card mt-3">
        <div class="card-header">
          <h3 class="card-title">備品移動履歴</h3>
        </div>
        <div class="card-body p-0">
          <% if @movements&.any? %>
            <table class="table table-striped table-hover mb-0">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>種別</th>
                  <th>数量</th>
                  <th>移動元</th>
                  <th>移動先</th>
                  <th>備考</th>
                </tr>
              </thead>
              <tbody>
                <% @movements.each do |movement| %>
                  <tr>
                    <td><%= l(movement.movement_date, format: :long) %></td>
                    <td>
                      <% case movement.movement_type %>
                      <% when '入荷' %>
                        <span class="badge badge-success"><%= movement.movement_type %></span>
                      <% when '消費' %>
                        <span class="badge badge-danger"><%= movement.movement_type %></span>
                      <% when '移動' %>
                        <span class="badge badge-info"><%= movement.movement_type %></span>
                      <% else %>
                        <span class="badge badge-secondary"><%= movement.movement_type %></span>
                      <% end %>
                    </td>
                    <td class="text-right">
                      <strong><%= movement.quantity %></strong> <%= page.resource.supply.unit %>
                    </td>
                    <td>
                      <% if movement.from_location %>
                        <%= movement.from_location.name %>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td>
                      <% if movement.to_location %>
                        <%= movement.to_location.name %>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td>
                      <%= movement.notes.present? ? movement.notes : '-' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <div class="p-4 text-center text-muted">
              移動履歴がありません
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
