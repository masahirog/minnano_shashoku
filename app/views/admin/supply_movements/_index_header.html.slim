- content_for(:title) do
  = display_resource_name(page.resource_name)

header.main-content__header
  h1.main-content__page-title id="page-title"
    = content_for(:title)

  = content_for(:header_middle)

  - if show_search_bar
    = render("search", search_term: search_term, resource_name: display_resource_name(page.resource_name))

    - if filters.any?
      div data-controller="tooltip"
        button.button--tooltip.search__tooltip data-tooltip-target="tooltip" popovertarget="search-tooltip"
          svg role="img"
            use xlink:href="#icon-question-mark"

        div.search__tooltip-popover.search__tooltip-popover-positioning data-tooltip-target="popover" popover="" id="search-tooltip" role="tooltip"
          p
            strong Use filters to refine your search
          ul
            - filters.keys.each do |filter_key|
              li
                = filter_key
                | :
                span.search__tooltip-popover-value &lt;value&gt;

  div
    = link_to "移動登録", new_admin_bulk_supply_movement_path, class: "btn btn-primary btn-sm"

  = content_for(:header_last)
